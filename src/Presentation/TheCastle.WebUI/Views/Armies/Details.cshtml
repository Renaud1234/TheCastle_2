@model TheCastle.Domain.Entities.Army

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Army</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<h3>Castles</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                Castle
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var castle in Model.Castles)
        {
            <tr>
                <td>
                    <a class="text-dark" asp-controller="Castles" asp-action="Details" asp-route-id="@castle.Id">
                        @Html.DisplayFor(modelItem => castle.Name)
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>